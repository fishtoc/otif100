<odoo>
  <record model="ir.ui.view" id="history_form_view">
    <field name="name">history.form</field>
    <field name="model">otif100.history</field>
    <field name="arch" type="xml">
      <form string="History form">
        <sheet>
          <group>
            <field name="finish_date"/>
            <field name="wo_id"/>
            <field name="sku_id"/>
            <field name="cli_id"/>
            <field name="sku_description"/>
            <field name="qty_total"/>
            <field name="due_date"/>
            <field name="actual_release_date"/>
            <field name="buffer_status"/>
            <field name="order_type"/>
            <field name="ontime"/>
            <field name="company_id" invisible="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="history_tree_view">
    <field name="name">history.tree</field>
    <field name="model">otif100.history</field>
    <field name="arch" type="xml">
      <tree string="History tree" default_order='buffer_status'
            decoration-bf="buffer_status == '0. black'"
            decoration-danger="buffer_status == '1. red'"
            decoration-warning="buffer_status == '2. yellow'"
            decoration-success="buffer_status == '3. green'"
            decoration-info="buffer_status == '4. cyan'">
        <field name="finish_date"/>
        <field name="wo_id"/>
        <field name="sku_id"/>
        <field name="cli_id"/>
        <field name="sku_description"/>
        <field name="qty_total"/>
        <field name="due_date"/>
        <field name="actual_release_date"/>
        <field name="buffer_status"/>
        <field name="order_type"/>
        <field name="ontime"/>
        <field name="company_id" invisible="1"/>
      </tree>
    </field>
  </record>

  <record model="ir.ui.view" id="history_search_view">
    <field name="name">history.search</field>
    <field name="model">otif100.history</field>
    <field name="arch" type="xml">
      <search>
        <field name="wo_id"/>
        <field name="sku_id"/>
        <field name="due_date"/>
        <filter name="is_mto" string="MTO orders" domain="[('order_type', '=', 'MTO')]"/>
        <filter name="is_mta" string="MTA orders" domain="[('order_type', '=', 'MTA')]"/>
        <group string="Group by">
          <filter name="by_customer" string="Customer" context="{'group_by': 'cli_id'}"/>
          <filter name="by_finish" string="Finish date" context="{'group_by': 'finish_date'}"/>
          <filter name="by_type" string="Type" context="{'group_by': 'order_type'}"/>
        </group>
      </search>
    </field>
  </record>

  <record model="ir.ui.view" id="history_graph_view">
    <field name="name">history.graph</field>
    <field name="model">otif100.history</field>
    <field name="type">graph</field>
    <field name="arch" type="xml">
    <graph string="OTIF" orientation="horizontal" type="line">
      <field name="finish_date"/>
    </graph>
    </field>
  </record>


  <record model="ir.actions.act_window" id="history_list_action">
    <field name="name">History</field>
    <field name="res_model">otif100.history</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form,graph</field>
  </record>
  <menuitem id="history_menu" name="Orders history" parent="production_menu" action="history_list_action"/>
</odoo>
