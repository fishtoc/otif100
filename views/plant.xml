              <field name="hours_day_5"
                     attrs="{'invisible': [('load_front_5','=',0)]}"/>
              <field name="load_front_5" widget="progressbar"
                     decoration-danger="load_front_5 &gt; 100"
                     decoration-success="load_front_5 &lt; 90"
                     attrs="{'invisible': [('load_front_5','=',0)]}"/>
              <field name="total_days_5"
                     attrs="{'invisible': [('load_front_5','=',0)]}"/>
              <field name="load_mta_5" widget="progressbar"
                     decoration-danger="load_mta_5 > 100"
                     attrs="{'invisible': [('load_mta_5','=',0)]}"/>
            </group>
            <group>
              <field name="ccr_6" 
                     attrs="{'invisible': [('load_front_6','=',0)]}"/>
              <field name="avg_buffer_6" 
                     attrs="{'invisible': [('load_front_6','=',0)]}"/>
              <field name="edd_6"
                     attrs="{'invisible': [('load_front_6','=',0)]}"/>
              <field name="reserved_mto_6"
                     attrs="{'invisible': [('load_front_6','=',0)]}"/>
              <field name="hours_day_6"
                     attrs="{'invisible': [('load_front_6','=',0)]}"/>
              <field name="load_front_6" widget="progressbar"
                     decoration-danger="load_front_6 &gt; 100"
