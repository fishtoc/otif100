<odoo>
  <record model="ir.ui.view" id="plant_form_view">
    <field name="name">plant.form</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <form string="Plant form">
        <sheet>
          <group>
            <field name="name"/>
            <field name="standard_dt"/>
            <field name="standard_pd"/>
            <field name="early_release"/>
            <field name="plant_full" invisible="1"/>
            <field name="hours_day_1"/>
            <field name="load_front_1" widget="progressbar"/>
            <field name="hours_day_2"/>
            <field name="load_front_2" widget="progressbar"/>
            <field name="hours_day_3"/>
            <field name="load_front_3" widget="progressbar"/>
            <field name="company_id" invisible="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="plant_tree_view">
    <field name="name">plant.tree</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <tree string="Plant tree"
            decoration-danger="plant_full == True"
            decoration-success="plant_full == False">
        <field name="name"/>
        <field name="plant_full" invisible="1"/>
        <field name="early_release"/>
        <field name="standard_pd"/>
        <field name="company_id" invisible="1"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="plant_list_action">
    <field name="name">Plant status and parameters</field>
    <field name="res_model">otif100.plant</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="plant_menu" name="Plant status" parent="load_control_menu" action="plant_list_action"/>
</odoo>
