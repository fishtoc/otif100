                     decoration-danger="load_mta_6 > 100"
                     attrs="{'invisible': [('load_mta_6','=',0)]}"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="plant_tree_view">
    <field name="name">plant.tree</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <tree string="Production line tree">
        <field name="name"/>
        <field name="suggested_date"/>
        <field name="company_id" invisible="1"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="plant_list_action">
    <field name="name">Production line status and Dates for future orders</field>
    <field name="res_model">otif100.plant</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="plant_menu" name="Status and Dates" parent="load_control_menu" action="plant_list_action"/>
</odoo>
