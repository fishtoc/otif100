<odoo>
  <record model="ir.ui.view" id="plant_form_view">
    <field name="name">plant.form</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <form string="Plant form">
        <sheet>
          <h1><field name="name"/></h1>
          <group col="2">
            <group string="Mark relevant CCRs to get a feasible date to promise">
              <field name="ccr1_included" attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="ccr2_included" attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="ccr3_included" attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="ccr4_included" attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="ccr5_included" attrs="{'invisible': [('load_front_5','=',0)]}"/>
              <field name="ccr6_included" attrs="{'invisible': [('load_front_6','=',0)]}"/>
            </group>
            <group string="Calculated Date to Promise">
              <h2><field name="suggested_date"/></h2>
              <field name="company_id" invisible="1"/>
            </group>
          </group>
          <group string="CCRs - Capacity Constrained Resources" col="3">
            <group>
              <field name="ccr_1" 
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="avg_buffer_1" 
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="edd_1" 
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="reserved_mto_1"
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="hours_day_1"
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="load_front_1" widget="progressbar" 
                     decoration-danger="load_front_1 &gt; 100"
                     decoration-success="load_front_1 &lt; 90"
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="total_days_1"
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="load_mta_1" widget="progressbar"
                     decoration-danger="load_mta_1 > 100"
                     attrs="{'invisible': [('load_mta_1','=',0)]}"/>
            </group>
            <group>
              <field name="ccr_2" 
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="avg_buffer_2" 
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="edd_2"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="reserved_mto_2"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="hours_day_2"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="load_front_2" widget="progressbar"
                     decoration-danger="load_front_2 &gt; 100"
                     decoration-success="load_front_2 &lt; 90"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="total_days_2"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="load_mta_2" widget="progressbar"
                     decoration-danger="load_mta_2 > 100"
                     attrs="{'invisible': [('load_mta_2','=',0)]}"/>
            </group>
            <group>
              <field name="ccr_3" 
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="avg_buffer_3" 
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="edd_3"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="reserved_mto_3"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="hours_day_3"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="load_front_3" widget="progressbar"
                     decoration-danger="load_front_3 &gt; 100"
                     decoration-success="load_front_3 &lt; 90"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="total_days_3"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="load_mta_3" widget="progressbar"
                     decoration-danger="load_mta_3 > 100"
                     attrs="{'invisible': [('load_mta_3','=',0)]}"/>
            </group>
            <group>
              <field name="ccr_4" 
                     attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="avg_buffer_4" 
                     attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="edd_4"
                     attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="reserved_mto_4"
                     attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="hours_day_4"
                     attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="load_front_4" widget="progressbar"
                     decoration-danger="load_front_4 &gt; 100"
                     decoration-success="load_front_4 &lt; 90"
                     attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="total_days_4"
                     attrs="{'invisible': [('load_front_4','=',0)]}"/>
              <field name="load_mta_4" widget="progressbar"
                     decoration-danger="load_mta_4 > 100"
                     attrs="{'invisible': [('load_mta_4','=',0)]}"/>
            </group>
            <group>
              <field name="ccr_5" 
                     attrs="{'invisible': [('load_front_5','=',0)]}"/>
              <field name="avg_buffer_5" 
                     attrs="{'invisible': [('load_front_5','=',0)]}"/>
              <field name="edd_5"
                     attrs="{'invisible': [('load_front_5','=',0)]}"/>
              <field name="reserved_mto_5"
