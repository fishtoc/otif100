<odoo>
  <record model="ir.ui.view" id="plant_form_view">
    <field name="name">plant.form</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <form string="Plant form">
        <sheet>
          <group col="3">
            <group string="Short Horizon settings">
              <field name="name"/>
              <field name="min_buffer"/>
              <field name="early_release"/>
            </group>
            <group string="Desired Date to Promise">
              <field name="standard_dt"/>
              <field name="standard_pd"/>
            </group>
            <group string="Calculated Date to Promise">
              <h2><field name="suggested_date"/></h2>
              <field name="plant_full" invisible="1"/>
              <field name="company_id" invisible="1"/>
            </group>
          </group>
          <group string="CCRs - Capacity Constrained Resources" col="3">
            <group>
              <field name="ccr_1"
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="load_front_1" widget="progressbar"
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
              <field name="total_days_1"
                     attrs="{'invisible': [('load_front_1','=',0)]}"/>
            </group>
            <group>
              <field name="ccr_2"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="hours_day_2"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="load_front_2" widget="progressbar"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
              <field name="total_days_2"
                     attrs="{'invisible': [('load_front_2','=',0)]}"/>
            </group>
            <group>
              <field name="ccr_3"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="hours_day_3"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="load_front_3" widget="progressbar"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
              <field name="total_days_3"
                     attrs="{'invisible': [('load_front_3','=',0)]}"/>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="plant_tree_view">
    <field name="name">plant.tree</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <tree string="Production line tree"
            decoration-danger="plant_full == True"
            decoration-success="plant_full == False">
        <field name="name"/>
        <field name="plant_full" invisible="1"/>
        <field name="early_release"/>
        <field name="suggested_date"/>
        <field name="company_id" invisible="1"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="plant_list_action">
    <field name="name">Production line status and Dates for future orders</field>
    <field name="res_model">otif100.plant</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="plant_menu" name="Status and Dates" parent="load_control_menu" action="plant_list_action"/>
</odoo>
