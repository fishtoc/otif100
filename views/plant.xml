<odoo>
  <record model="ir.ui.view" id="plant_form_view">
    <field name="name">plant.form</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <form string="Plant form">
        <sheet>
          <group>
            <field name="name"/>
            <field name="standard_dt"/>
            <field name="plant_full"/>
            <field name="hours_day_1"/>
            <field name="company_id" invisible="0"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record model="ir.ui.view" id="plant_tree_view">
    <field name="name">plant.tree</field>
    <field name="model">otif100.plant</field>
    <field name="arch" type="xml">
      <tree string="Plant tree">
        <field name="name"/>
        <field name="plant_full"/>
        <field name="standard_dt"/>
        <field name="hours_day_1"/>
        <field name="company_id" invisible="1"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="plant_list_action">
    <field name="name">Plant parameters</field>
    <field name="res_model">otif100.plant</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="plant_menu" name="Pant parameters" parent="configuration_menu" action="plant_list_action"/>
</odoo>
